{"ast":null,"code":"import axios from 'axios';\nimport { useRoute } from 'vue-router';\nimport { ref } from '@vue/reactivity';\nexport default {\n  name: 'PurchasePage',\n  setup() {\n    const route = useRoute();\n    let product = ref({});\n    let productId = ref(0);\n    productId.value = route.params.id;\n    axios.get('/api/product/purchase/' + productId.value).then(res => {\n      console.log(res.data);\n      product.value = res.data;\n    }).catch(err => {\n      console.log(err);\n    });\n    function filter(val) {\n      return String(val).replace(/\\B(?=(\\d{3})+(?!\\d))/g, ',');\n    }\n    return {\n      productId,\n      product,\n      filter\n    };\n  }\n};","map":{"version":3,"mappings":"AAyBA,OAAOA,KAAI,MAAO,OAAO;AACzB,SAASC,QAAO,QAAS,YAAW;AACpC,SAASC,GAAE,QAAS,iBAAiB;AAErC,eAAe;EACbC,IAAI,EAAE,cAAc;EACpBC,KAAK,GAAG;IACN,MAAMC,KAAI,GAAIJ,QAAQ,EAAE;IACxB,IAAIK,OAAM,GAAIJ,GAAG,CAAC,CAAC,CAAC,CAAC;IACrB,IAAIK,SAAQ,GAAIL,GAAG,CAAC,CAAC,CAAC;IACtBK,SAAS,CAACC,KAAI,GAAIH,KAAK,CAACI,MAAM,CAACC,EAAE;IAEjCV,KAAK,CAACW,GAAG,CAAC,wBAAuB,GAAIJ,SAAS,CAACC,KAAK,EACnDI,IAAI,CAACC,GAAG,IAAE;MACTC,OAAO,CAACC,GAAG,CAACF,GAAG,CAACG,IAAI,CAAC;MACrBV,OAAO,CAACE,KAAI,GAAIK,GAAG,CAACG,IAAI;IAC1B,CAAC,EACAC,KAAK,CAACC,GAAG,IAAE;MACVJ,OAAO,CAACC,GAAG,CAACG,GAAG,CAAC;IAClB,CAAC;IAED,SAASC,MAAM,CAACC,GAAG,EAAE;MACnB,OAAOC,MAAM,CAACD,GAAG,CAAC,CAACE,OAAO,CAAC,uBAAuB,EAAE,GAAG,CAAC;IAC1D;IAGA,OAAM;MAACf,SAAS;MAAED,OAAO;MAAEa;IAAM,CAAC;EACpC;AACF","names":["axios","useRoute","ref","name","setup","route","product","productId","value","params","id","get","then","res","console","log","data","catch","err","filter","val","String","replace"],"sourceRoot":"","sources":["/Users/dino/Library/Mobile Documents/com~apple~CloudDocs/공유/project/TGolShop/frontend/src/components/PurchasePage.vue"],"sourcesContent":["<template>\n  <div class=\"container px-4 px-lg-5 my-5\">\n    <div class=\"row gx-4 gx-lg-5 align-items-center\">\n      <div class=\"col-md-6 col-xl-5\"><img class=\"card-i